<div class="card bg-info text-black">
    <h3 class="card-header bg-black text-warning">Sign up</h3>
    <form id="signup-form" class="card-body d-flex flex-column">
      <label class="form-label" for="username-signup">Username</label>
      <input  id="username-signup" type="text" autofocus="true" class="form-input" />

      <label class="form-label" for="password-signup">Password</label>
      <input id="password-signup" type="password" autofocus="true" class="form-input" />

      <button type="submit" class="btn bg-black text-warning my-2">Sign up!</button>
      <a class="login-link text-decoration-none text-black" href="/login">Log in instead</a>
      </form>
    </div>
    
<script src="/js/signup.js"></script>