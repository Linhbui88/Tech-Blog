<div class="card bg-info text-black">
    <h3 class="card-header  bg-black text-warning">Edit Post</h3>
    <form class="card-body edit-post-form d-flex flex-column">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <textarea name="content" type="text" class="form-input">{{post.content}}</textarea>
        <button type="submit" class="btn bg-black text-warning my-2">Update Post</button>
        <button type="button" class="delete-post-btn btn bg-black text-warning my-2">Delete Post</button>
    </form>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
