<div class="card bg-info text-black">
    <h3 class="card-header bg-black text-warning">Login</h3>
    <form id="login-form" class="card-body d-flex flex-column">
      <label class="form-label" for="username-login">Username</label>
      <input  id="username-login" type="text" autofocus="true" class="form-input" />

      <label class="form-label" for="password-login">Password</label>
      <input id="password-login" type="password" autofocus="true" class="form-input" />

      <button type="submit" class="btn bg-black text-warning my-2">Login!</button>
      <a class="login-link text-decoration-none text-black" href="/signup">Sign up instead</a>
      </form>
    </div>
    
<script src="/js/login.js"></script>