{{> post-info post}}

{{#if session.loggedIn}}
<div class="card bg-info text-dark">
    <h3 class="card-header"></h3>
    <form class="card-body comment-form d-flex flex-column" id="comment-form" data-post_id="{{post.id}}">

        <label class="form-label">Comment</label>
        <textarea id="comment" name="comment-body" class="form-input" rows="4"></textarea>

        <button type="submit" class="btn text-warning bg-dark">Submit</button>
    </form>
</div>
{{/if}}

